    <style>
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            background-color: #f4f4f4;
        }

        .clock {
            position: relative;
            width: 200px;
            height: 200px;
            border: 10px solid #333;
            border-radius: 50%;
        }

        .hand {
            position: absolute;
            background-color: #333;
            transform-origin: 50% 100%;
            transform: rotate(0deg);
            transition: transform 0.5s cubic-bezier(0.4, 2.5, 0.4, 0.8);
        }

        #hours {
            height: 40px;
            width: 6px;
            top: 50px;
            left: 97px;
        }

        #minutes {
            height: 60px;
            width: 4px;
            top: 40px;
            left: 98px;
        }

        #seconds {
            height: 80px;
            width: 2px;
            top: 20px;
            left: 99px;
